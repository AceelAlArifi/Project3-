<h2>Sign up</h2>
<%= @name %>
  <%= render "devise/shared/error_messages", resource: resource %>
<button type="button" class="btn btn-outline-primary Parent">Parent</button>
<button type="button" class="btn btn-outline-success Nanny ">Nanny</button>

<div class = "paentDesplay">
 <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="field form">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field form">
    <%= f.hidden_field :care %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone, class: "input-medium bfh-phone" %>
  </div>

  <div class="field">
    <%= f.label :nationality %><br />
    <%= f.text_field :nationality %>
  </div>

  <div class="field">
    <%= f.label :city %><br />
    <%= f.collection_select(:city_id, City.all.order(:name), :id, :name, {} ,class: "custom-select select22" ) %>
  </div>

 <div class="field">
    <%= f.label :area %><br />
    <%= f.text_field :area %>
  </div>

   <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  <%end%>
</div>

